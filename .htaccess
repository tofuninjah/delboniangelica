RewriteEngine On

RewriteRule ^\.htaccess$ - [F]

RewriteCond %{REQUEST_URI} =""
RewriteRule ^.*$ /build/index.html [NC,L]

RewriteCond %{REQUEST_URI} !^/build/.*$
RewriteRule ^(.*)$ /build/$1

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*$ - [NC,L]

RewriteRule ^public/.*$ /build/index.html [NC,L]